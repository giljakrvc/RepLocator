<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RepLocator2Activity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtAddress"
            android:hint="Enter Address"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/txtCity"
            android:layout_marginTop="96dp" app:layout_constraintEnd_toEndOf="@+id/txtCity"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtCity"
            android:hint="Enter City"
            app:layout_constraintStart_toStartOf="@+id/txtState" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAddress" app:layout_constraintEnd_toEndOf="@+id/txtState"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtState"
            android:hint="Enter State"
            app:layout_constraintStart_toStartOf="@+id/txtZipCode" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCity" app:layout_constraintEnd_toEndOf="@+id/seekBar2"/>
    <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.233" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar2"/>
    <TextView
            android:text="Adding a new Sales Representative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewTitle2"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar2" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnCancel2"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.234" app:layout_constraintHorizontal_bias="0.817"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:id="@+id/seekBar2"
            style="@style/Widget.AppCompat.SeekBar" android:progress="66"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtZipCode" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" android:layout_marginEnd="61dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/txtZipCode"
            android:hint="Enter Zip Code" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtState" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="58dp" android:layout_marginEnd="58dp"/>
    <TextView
            android:layout_width="297dp"
            android:layout_height="23dp"
            android:id="@+id/txtViewName"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/txtViewTitle2"
            app:layout_constraintHorizontal_bias="0.51" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtAddress"
            android:textAppearance="@style/TextAppearance.AppCompat"/>
</android.support.constraint.ConstraintLayout>