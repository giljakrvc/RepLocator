<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".RepLocator3Activity">

    <TextView
            android:text="Sales Representative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewTitle3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
            android:text="Welcome, "
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/txtWelcome"
            android:textAppearance="@style/TextAppearance.AppCompat"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtShowName"
            android:text="Name"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtShowMobile"
            android:text="Mobile"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtShowEmail"
            android:text="Email"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtShowAddress"
            android:text="Address"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/txtShowAddress2"
            android:text="Address"/>

    <Button
            android:text="Go to Map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnReturn"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"/>

</LinearLayout>
