<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RepLocator3Activity">

    <Button
            android:text="Go to Map"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnReturn"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="156dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Sales Representative"
            android:layout_width="142dp"
            android:layout_height="0dp"
            android:id="@+id/txtViewTitle3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtWelcome" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/txtShowAddress2" android:layout_marginEnd="46dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintEnd_toEndOf="@+id/btnReturn" app:layout_constraintBottom_toTopOf="@+id/btnReturn"/>
    <TextView
            android:text="Welcome, "
            android:layout_width="395dp"
            android:id="@+id/txtWelcome"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_height="39dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtViewTitle3"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/txtShowName"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtShowName"
            android:layout_marginBottom="26dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/txtShowMobile"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="121dp" android:text="Name"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtShowMobile"
            android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/txtShowEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="174dp" android:text="Mobile"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtShowEmail"
            android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/txtShowAddress"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="223dp" android:text="Email"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtShowAddress"
            android:layout_marginBottom="21dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/txtShowAddress2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="272dp" android:text="Address"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtShowAddress2"
            app:layout_constraintTop_toBottomOf="@+id/txtShowAddress" android:layout_marginBottom="46dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:text="Address"/>
</android.support.constraint.ConstraintLayout>